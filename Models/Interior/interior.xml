<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>cache</object-name>
    <object-name>armature1</object-name>
    <object-name>armature2</object-name>
    <object-name>armature3</object-name>
    <object-name>pedaleG</object-name>
    <object-name>pedaleD</object-name>

    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>shader.png</texture>
    <object-name>intvitres</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intvitres</object-name>
  </animation>

  <!-- Planches de bord -->
  <model>
    <path>Aircraft/Macchi-Castoldi-MC72/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -0.014 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.296 </z-m>
    </offsets>
  </model>

  <!-- Pilote -->
  <model>
    <name>Pilote</name>
    <path>Aircraft/Macchi-Castoldi-MC72/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m>  0.209 </x-m>
      <y-m>  0.022 </y-m>
      <z-m> -0.351 </z-m>
    </offsets>
  </model>

  <!-- Palonnier -->
  <animation>
    <type>translate</type>
    <object-name>pedaleG</object-name>
    <property>controls/flight/rudder</property>
    <factor>0.04</factor>
    <axis>
      <x> 1.000 </x>
      <y> 0.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>pedaleD</object-name>
    <property>controls/flight/rudder</property>
    <factor>-0.04</factor>
    <axis>
      <x> 1.000 </x>
      <y> 0.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

  <!-- Canopy -->
  <animation>
    <type>rotate</type>
    <object-name>intvitres</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <factor>-162</factor>
    <center>
      <x-m> -0.061 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.459 </z-m>
    </center>
    <axis>
      <x> 0.000 </x>
      <y> 1.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

</PropertyList>
