<?xml version="1.0"?>

<PropertyList>

  <path>mc72.ac</path>

  <nasal>
    <load>
      var livery_update = aircraft.livery_update.new("Aircraft/Macchi-Castoldi-MC72/Models/Liveries", 10);
    </load>
    <unload>
      livery_update.stop();
    </unload>
  </nasal>

  <animation>
    <!-- Objets opaques -->
    <object-name>fuselage</object-name>
    <object-name>aile</object-name>
    <object-name>aile2</object-name>
    <object-name>derive</object-name>
    <object-name>floteurG</object-name>
    <object-name>floteurD</object-name>
    <object-name>aileronG</object-name>
    <object-name>aileronD</object-name>
    <object-name>direction</object-name>
    <object-name>profondeur</object-name>
    <object-name>poteau</object-name>
    <object-name>cables</object-name>
    <object-name>tourvitre</object-name>
    <object-name>appuis</object-name>
    <object-name>echappe</object-name>
    <object-name>bol1</object-name>
    <object-name>bol2</object-name>
    <object-name>helice1</object-name>
    <object-name>helice2</object-name>


    <!-- Objets transparents -->
    <object-name>vitre</object-name>
    <object-name>propdisc1</object-name>
    <object-name>propblur1</object-name>
    <object-name>propdisc2</object-name>
    <object-name>propblur2</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>fuselage</object-name>
    <object-name>aile</object-name>
    <object-name>aile2</object-name>
    <object-name>derive</object-name>
    <object-name>floteurG</object-name>
    <object-name>floteurD</object-name>
    <object-name>aileronG</object-name>
    <object-name>aileronD</object-name>
    <object-name>direction</object-name>
    <object-name>profondeur</object-name>
    <object-name>poteau</object-name>
    <object-name>cables</object-name>
    <object-name>tourvitre</object-name>
    <object-name>appuis</object-name>
    <object-name>echappe</object-name>
    <object-name>bol1</object-name>
    <object-name>bol2</object-name>
    <object-name>helice1</object-name>
    <object-name>helice2</object-name>

    <property-base>sim/model/livery</property-base>
    <texture-prop>texture</texture-prop>
    <texture>texture.png</texture>
<!--
    <diffuse>
      <red-prop>diffuse/red</red-prop>
      <green-prop>diffuse/green</green-prop>
      <blue-prop>diffuse/blue</blue-prop>
    </diffuse>

    <ambient>
      <red-prop>ambient/red</red-prop>
      <green-prop>ambient/green</green-prop>
      <blue-prop>ambient/blue</blue-prop>
    </ambient>
-->
    <specular>
      <red-prop>specular/red</red-prop>
      <green-prop>specular/green</green-prop>
      <blue-prop>specular/blue</blue-prop>
    </specular>

    <emission>
      <red-prop>emission/red</red-prop>
      <green-prop>emission/green</green-prop>
      <blue-prop>emission/blue</blue-prop>
    </emission>
<!--
    <shininess>
      <shininess-prop>shininess</shininess-prop>
    </shininess>
-->
  </animation>

  <!-- Trainée gauche -->
  <model>
    <path>Aircraft/Macchi-Castoldi-MC72/Models/Effects/wakeG.xml</path>
    <offsets>
      <x-m>  2.096 </x-m>
      <y-m> -1.373 </y-m>
      <z-m> -0.999 </z-m>
      <roll-deg>    0.000 </roll-deg>
      <pitch-deg> -45.000 </pitch-deg>
      <heading-deg> 0.000 </heading-deg>
    </offsets>
  </model> 

  <!-- Trainée droite -->
  <model>
    <path>Aircraft/Macchi-Castoldi-MC72/Models/Effects/wakeD.xml</path>
    <offsets>
      <x-m>  2.096 </x-m>
      <y-m>  1.373 </y-m>
      <z-m> -0.999 </z-m>
      <roll-deg>    0.000 </roll-deg>
      <pitch-deg> -45.000 </pitch-deg>
      <heading-deg> 0.000 </heading-deg>
    </offsets>
  </model> 

  <!-- Eclaboussures, avant gauche -->
  <model>
    <path>Aircraft/Macchi-Castoldi-MC72/Models/Effects/jetG.xml</path>
    <offsets>
      <x-m> -3.783 </x-m>
      <y-m> -1.373 </y-m>
      <z-m> -1.214 </z-m>
      <roll-deg>    0.000 </roll-deg>
      <pitch-deg> -90.000 </pitch-deg>
      <heading-deg> 0.000 </heading-deg>
    </offsets>
  </model> 

  <!-- Eclaboussures, avant droite -->
  <model>
    <path>Aircraft/Macchi-Castoldi-MC72/Models/Effects/jetD.xml</path>
    <offsets>
      <x-m> -3.783 </x-m>
      <y-m>  1.373 </y-m>
      <z-m> -1.214 </z-m>
      <roll-deg>    0.000 </roll-deg>
      <pitch-deg> -90.000 </pitch-deg>
      <heading-deg> 0.000 </heading-deg>
    </offsets>
  </model> 

  <!-- Eclaboussures, centre gauche -->
  <model>
    <path>Aircraft/Macchi-Castoldi-MC72/Models/Effects/jetmG.xml</path>
    <offsets>
      <x-m> -0.989 </x-m>
      <y-m> -1.373 </y-m>
      <z-m> -1.090 </z-m>
      <roll-deg>    0.000 </roll-deg>
      <pitch-deg> -90.000 </pitch-deg>
      <heading-deg> 0.000 </heading-deg>
    </offsets>
  </model> 

  <!-- Eclaboussures, centre droite -->
  <model>
    <path>Aircraft/Macchi-Castoldi-MC72/Models/Effects/jetmD.xml</path>
    <offsets>
      <x-m> -0.989 </x-m>
      <y-m>  1.373 </y-m>
      <z-m> -1.090 </z-m>
      <roll-deg>    0.000 </roll-deg>
      <pitch-deg> -90.000 </pitch-deg>
      <heading-deg> 0.000 </heading-deg>
    </offsets>
  </model> 

  <!-- Intérieur -->
  <model>
    <path>Aircraft/Macchi-Castoldi-MC72/Models/Interior/interior.xml</path>
    <offsets>
      <x-m> 0.310 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.407 </z-m>
    </offsets>
  </model>

  <!-- L'hélice du moteur 1--> 
  <animation>
    <name>HeliceComplete1</name>
    <object-name>propdisc1</object-name>
    <object-name>propblur1</object-name>
    <object-name>helice1</object-name>
    <object-name>bol1</object-name>
  </animation>

  <!-- Séléction de l'objet visible en fonction des rpm -->
  <animation>
    <type>select</type>
    <object-name>propdisc1</object-name>
    <condition>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value>1500</value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>propblur1</object-name>
    <condition>
    <and>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value>600.000</value>
      </greater-than>
      <less-than>
        <property>engines/engine[0]/rpm</property>
        <value>1500.001</value>
      </less-than>
    </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>helice1</object-name>
    <condition>
      <less-than>
        <property>engines/engine[0]/rpm</property>
	<value>1500</value>
      </less-than>
    </condition>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>HeliceComplete1</object-name>
    <property>engines/engine[0]/rpm</property>
    <factor> 1 </factor>
    <center>
      <x-m> -3.285 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.530 </z-m>
    </center>
    <axis>
      <x> 1.000 </x>
      <y> 0.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

  <!-- L'hélice du moteur 2--> 
  <animation>
    <name>HeliceComplete2</name>
    <object-name>propdisc2</object-name>
    <object-name>propblur2</object-name>
    <object-name>helice2</object-name>
    <object-name>bol2</object-name>
  </animation>

  <!-- Séléction de l'objet visible en fonction des rpm -->
  <animation>
    <type>select</type>
    <object-name>propdisc2</object-name>
    <condition>
      <greater-than>
        <property>engines/engine[1]/rpm</property>
        <value>1500</value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>propblur2</object-name>
    <condition>
    <and>
      <greater-than>
        <property>engines/engine[1]/rpm</property>
        <value>600.000</value>
      </greater-than>
      <less-than>
        <property>engines/engine[1]/rpm</property>
        <value>1500.001</value>
      </less-than>
    </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>helice2</object-name>
    <condition>
      <less-than>
        <property>engines/engine[1]/rpm</property>
	<value>1500</value>
      </less-than>
    </condition>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>HeliceComplete2</object-name>
    <property>engines/engine[1]/rpm</property>
    <factor> 1 </factor>
    <center>
      <x-m> -3.583 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.530 </z-m>
    </center>
    <axis>
      <x> -1.000 </x>
      <y>  0.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <!-- Gouverne de profondeur -->
  <animation>
    <type>rotate</type>
    <object-name>profondeur</object-name>
    <property>controls/flight/elevator</property>
    <factor>11</factor>
    <center>
      <x-m> 3.696 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.539 </z-m>
    </center>
    <axis>
      <x> 0.000 </x>
      <y> 1.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

  <!-- Gouverne de direction -->
  <animation>
    <type>rotate</type>
    <object-name>direction</object-name>
    <property>controls/flight/rudder</property>
    <factor>20</factor>
    <center>
      <x-m> 3.626 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.811 </z-m>
    </center>
    <axis>
      <x> 0.000 </x>
      <y> 0.000 </y>
      <z> 1.000 </z>
    </axis>
  </animation>

  <!-- Animations des ailerons -->
  <animation>
    <type>rotate</type>
    <object-name>aileronG</object-name>
    <property>surface-positions/left-aileron-pos-norm</property>
    <factor>15.0</factor>
    <center>
      <x-m> -0.284 </x-m>
      <y-m> -3.287 </y-m>
      <z-m>  0.012 </z-m>
    </center>
    <axis>
      <x> 0.000 </x>
      <y> 1.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation> 

  <!-- Animations des ailerons -->
  <animation>
    <type>rotate</type>
    <object-name>aileronD</object-name>
    <property>surface-positions/right-aileron-pos-norm</property>
    <factor>15.0</factor>
    <center>
      <x-m> -0.284 </x-m>
      <y-m>  3.287 </y-m>
      <z-m>  0.012 </z-m>
    </center>    <axis>
      <x> 0.000 </x>
      <y> 1.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation> 

  <!-- Canopy -->
  <animation>
    <type>rotate</type>
    <object-name>tourvitre</object-name>
    <object-name>vitre</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <factor>-162</factor>
    <center>
      <x-m> 0.249 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.866 </z-m>
    </center>
    <axis>
      <x> 0.000 </x>
      <y> 1.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

</PropertyList>

